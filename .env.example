# FamilyEye Environment Configuration
# Copy this file to .env and customize values

# =============================================================================
# SECURITY (REQUIRED for production)
# =============================================================================

# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-change-in-production

# =============================================================================
# DATABASE
# =============================================================================

# SQLite (default - good for standalone)
DATABASE_URL=sqlite:///parental_control.db

# PostgreSQL (for larger deployments)
# DATABASE_URL=postgresql://user:password@localhost:5432/familyeye

# =============================================================================
# SERVER
# =============================================================================

# Listen address (0.0.0.0 = all interfaces)
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000

# Public URL (auto-detected if not set)
# BACKEND_URL=https://your-domain.com:8000

# =============================================================================
# AUTHENTICATION
# =============================================================================

# JWT token expiration (in minutes, default: 1440 = 24 hours)
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# =============================================================================
# SSL/TLS (for HTTPS)
# =============================================================================

# Place certificates in certs/ directory:
# - certs/server.crt (certificate)
# - certs/server.key (private key)
# HTTPS is auto-enabled when certificates are detected

# =============================================================================
# DEVELOPMENT
# =============================================================================

# Set to "development" for debug mode
# ENVIRONMENT=production
